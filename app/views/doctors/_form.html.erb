<% if @doctor.errors.any? %>
  <div class='alert alert-danger'>
    <ul>
    <% @doctor.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @doctor, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, maxlength: "255", required: true %>
  </div>

  <div>
    <%= f.label :crm %>
    <%= f.text_field :crm, minlength: "4", maxlength: "10", required: true %>
  </div>

  <div>
    <%= f.label :crm_uf %>
    <%= f.text_field :crm_uf, minlength: "2", maxlength: "2", required: true %>
  </div>

  <%= f.submit %>
<% end %>
